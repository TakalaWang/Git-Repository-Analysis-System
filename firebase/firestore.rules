rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - only readable by the user themselves
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Managed by backend only
    }
    
    // Scans collection - all scans are now public
    // Any user (authenticated or anonymous) can read any scan
    // Only backend can write (via Admin SDK)
    match /scans/{scanId} {
      allow read: if true;  // Public access to all scans
      allow write: if false; // Only backend can write
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
