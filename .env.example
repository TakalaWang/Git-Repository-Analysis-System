# ============================================================================
# Rate Limiting Configuration
# ============================================================================
# Controls how many scan requests users can make within a time window
# Note: NEXT_PUBLIC_ prefix makes these available to both server and client

# Anonymous User Rate Limits (IP-based)
# Maximum number of scans an anonymous user can perform per time window
NEXT_PUBLIC_RATE_LIMIT_ANONYMOUS_MAX_REQUESTS=3
# Time window in hours for anonymous users
NEXT_PUBLIC_RATE_LIMIT_ANONYMOUS_WINDOW_HOURS=1

# Authenticated User Rate Limits (UID-based)
# Maximum number of scans an authenticated user can perform per time window
NEXT_PUBLIC_RATE_LIMIT_AUTHENTICATED_MAX_REQUESTS=20
# Time window in hours for authenticated users
NEXT_PUBLIC_RATE_LIMIT_AUTHENTICATED_WINDOW_HOURS=1

# ============================================================================
# Git Repository Configuration
# ============================================================================
# Settings for cloning and analyzing repositories

# Maximum time (in seconds) to wait for git operations before timeout
GIT_CLONE_TIMEOUT_SECONDS=300

# Maximum repository size to clone (in MB)
# Prevents cloning extremely large repositories that could consume too many resources
GIT_MAX_REPO_SIZE_MB=500

# ============================================================================
# AI Analysis Configuration (Gemini)
# ============================================================================
# Settings for Google Gemini AI-powered repository analysis

# Gemini AI model to use for analysis
GEMINI_MODEL=gemini-2.5-flash

# Maximum number of retry attempts if Gemini API fails
GEMINI_MAX_RETRIES=3

# Delay in seconds between retry attempts
GEMINI_RETRY_DELAY_SECONDS=60

# Temperature setting for AI responses (0.0 - 2.0)
# Lower = more deterministic, Higher = more creative
GEMINI_TEMPERATURE=0.7

# Maximum tokens in the AI response
GEMINI_MAX_OUTPUT_TOKENS=8192
